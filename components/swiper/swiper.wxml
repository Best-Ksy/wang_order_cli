      <image mode="widthFix" src="http://iwenwiki.com:3001/images/banner/1.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image mode="widthFix" src="http://iwenwiki.com:3001/images/banner/3.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image mode="widthFix" src="http://iwenwiki.com:3001/images/banner/1.jpg"></image>
    </swiper-item>

  </swiper>
</view>